<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/favicon.svg" type="image/x-icon">
    <%- include('styles') %>
    <script defer src="/js/script.js"></script>
    <title>LBRY Viewer</title>
</head>
<body>
    <%- include('header') %>
    <% if (data) { %>
        <% if (!data.error) { %>
            <% if (data.items) { %>
                <%- include('search', {result: data}) %>
            <% } else { %>
                <div class="card">
                    <%- include('stream', {result: data}) %>
                </div>
            <% } %>
        <% } else { %>
            <p style="text-align: center; padding-top: 20px"><%= data.error %></p>
            <%- include('home') %>
        <% } %>
    <% } else { %>
        <%- include('home') %>
    <% } %>
</body>
</html>